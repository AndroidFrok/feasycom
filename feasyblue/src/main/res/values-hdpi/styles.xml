
<resources>
    //header


    <style name="header_right_check_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Base application theme. -->
    <style name="toolbar">
        <item name="colorControlNormal">@android:color/holo_orange_dark</item>
    </style>


    //footer

    <style name="Communicate_Setting_About_LL">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Communicate_Setting_About_TV">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Communicate_Setting_About_IV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    //device list

    <style name="Device_Addr_Mac_TV">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/beacon_info</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2px</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">@color/text_enable</item>
    </style>


    <style name="deviceInformationTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="deviceInformation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textColor">#bbb</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--SettingActivity-->
    <style name="settingButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settingItemLength</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/btn_background_default_hightlight</item>
    </style>

    <!--about-->
    <style name="aboutRightTV">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/about_title</item>
    </style>

    <style name="moduleTV">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/about_text</item>
    </style>

    <style name="aboutLL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="serviceSelectLL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>

    </style>

    <style name="serviceSelectTop">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">#171717</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="serviceSelectButtom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#141414</item>
        <item name="android:background">@drawable/buttom_line</item>
    </style>

    <style name="throughputText">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="selectFileButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/footer_on_text_color</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="selectFileView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/footer_on_text_color</item>
    </style>

    <!--底部弹框动画-->
    <style name="bottomDialog">
        <item name="android:windowEnterAnimation">@anim/dialog_fr_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_fr_out</item>
    </style>

</resources>
